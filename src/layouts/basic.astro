---
import '../styles.css';
type Props = {
  frontmatter: {
    title: string;
    pdfLink?: string;
    noIndex?: boolean;
    description?: string;
  };
};

const { title, description } = Astro.props.frontmatter;

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description || title} />
    <title>{title}</title>
  </head>
  <body>
      <div class="lg:max-w-4xl max-w-fit bg-white px-12 py-8 pt-20 ">
        <h1>David Lewis</h1>
        <p>Senior Engineering Manager</p>
      </div>
      <article class="basic">
        <slot />
      </article>
  </body>
</html>